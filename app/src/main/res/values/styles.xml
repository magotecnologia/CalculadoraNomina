<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FormFields" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/form_margin</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <style name="FormFields.Edit" parent="FormFields">
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:maxLength">30</item>
    </style>

    <style name="FormFields.Text" parent="FormFields"></style>

    <style name="FormFields.Button" parent="FormFields">
        <item name="android:textColor">@color/icon_text</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="Accounting1" parent="FormFields">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/simple_border</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">1dp</item>
    </style>

    <style name="Accounting2" parent="FormFields">
        <item name="android:background">@drawable/simple_border</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingEnd">1dp</item>
    </style>
    <style name="FormFields.Title" parent="FormFields">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">@drawable/simple_border</item>
    </style>

    <style name="FormFields.Title2" parent="FormFields">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/simple_border</item>
    </style>
    <style name="Buttons" parent="AppTheme">

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
